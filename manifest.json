{
  "manifest_version": 3,
  "name": "Facebook Scammer Assassin",
  "version": "2.3",
  "description": "Extracts Facebook user info and provides tools to block them from groups.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon.png"
    }
  },
  "permissions": [
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://www.facebook.com/*",
    "https://m.facebook.com/*",
    "https://mbasic.facebook.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "options.html",
        "options.js",
        "Sortable.min.js",
        "browser-polyfill.min.js",
        "shrug_icon.png" // <-- Add the image filename here
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "scripts": ["service-worker.js"] // <-- CHANGE HERE
  },
  "options_page": "options.html",

  "browser_specific_settings": {
    "gecko": {
      "id": "scammer-assassin@ferrariguy.github.com",
      "strict_min_version": "128.0"
    }
  }, // <-- Comma already removed here

  "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon.png"
  }
}