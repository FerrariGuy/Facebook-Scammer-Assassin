{
  "manifest_version": 3,
  "name": "Facebook Scammer Assassin",
  "version": "2.6.0",
  "default_locale": "en",
  "description": "__MSG_extDescription__",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Facebook Scammer Assassin",
    "default_icon": {
      "16": "icons/icon16-light.png",
      "32": "icons/icon32-light.png",
      "48": "icons/icon48-light.png",
      "128": "icons/icon128-light.png"
    }
  },
  "permissions": [
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://*.facebook.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "options.html",
        "options.js",
        "Sortable.min.js",
        "browser-polyfill.min.js",
        "icons/shrug_icon.png",
        "icons/donate_qr.png"
      ],
      "matches": [ "https://*.facebook.com/*" ]
    }
  ],
  "background": {
    "scripts": ["service-worker.js"],
    "service_worker": "service-worker.js"
  },
  "options_page": "options.html",
  "browser_specific_settings": {
    "gecko": {
      "id": "scammer-assassin@ferrariguy.github.com",
      "strict_min_version": "126.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },
  "icons": {
    "16": "icons/icon16-light.png",
    "32": "icons/icon32-light.png",
    "48": "icons/icon48-light.png",
    "128": "icons/icon128-light.png"
  }
}